<img src="{{poster_path}}" alt="{{title}}" class="movie__cover">
<div class="movie__containerInfo">
  <h1 class="movie__title">{{title}}</h1>
  <ul class="movie__characteristics">
    <li>
      <span class="movie__characteristics--title">Vote / Votes</span>
      <span class="movie__characteristics--orange">{{vote_average}}</span>
      &nbsp;/&nbsp;
      <span class="movie__characteristics--grey">{{vote_count}}</span>
    </li>
    <li>
      <span class="movie__characteristics--title">Popularity</span>
      <span class="movie__characteristics--black">{{popularity}}</span>
    </li>
    <li>
      <span class="movie__characteristics--title">Original Title</span>
      <span class="movie__characteristics--black">{{original_title}}</span>
    </li>
    <li>
      <span class="movie__characteristics--title">Genre</span>
      <span class="movie__characteristics--black">
        {{#each this.genres}}{{name}}{{#unless @last}}, {{/unless}}{{/each}}

      </span>
    </li>
  </ul>
  <h2 class="movie__title movie__title--h2">About</h2>
  <div>
    <p class="movie__description">{{overview}}</p>
  </div>
  <div class="button-container">
    <button type="submit" class="button button--solid js-watched"></button>
    <button type="submit" class="button button--hollow js-queue"></button>
  </div>
</div>